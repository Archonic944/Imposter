---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A minimalist party game" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="selection:bg-white/20">
		<main class="flex-grow flex flex-col items-center justify-center p-4 w-full max-w-md md:max-w-6xl mx-auto relative transition-all duration-300">
			<slot />
		</main>
    <footer class="p-4 text-center text-xs text-zinc-600">
      Imposter &copy; {new Date().getFullYear()}
    </footer>
	</body>
</html>
