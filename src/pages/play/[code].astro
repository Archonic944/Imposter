---
import Layout from '../../layouts/Layout.astro';

const { code } = Astro.params;
---

<Layout title={`Imposter - Game ${code}`}>
  <div id="app" class="w-full max-w-5xl space-y-6 transition-opacity duration-500 opacity-0 relative pb-20">
    
    <!-- Header with Game Code -->
    <div class="flex items-center justify-between text-zinc-500 text-sm mb-4">
      <div class="flex items-center gap-4">
        <span>Code: <span class="text-white font-mono tracking-wider font-bold">{code}</span></span>
        <span id="connectionStatus" class="w-2 h-2 rounded-full bg-red-500"></span>
      </div>
      <div class="flex items-center gap-2">
         <button id="headerReplayBtn" class="hidden flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-blue-600 hover:bg-blue-500 text-white transition-colors text-xs font-medium group relative" title="Create new game with same settings & invite everyone">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"></path><path d="M3 3v5h5"></path><path d="M3 12a9 9 0 0 0 9 9 9.75 9 0 0 0 6.74-2.74L21 16"></path><path d="M16 21h5v-5"></path></svg>
            Replay
            <!-- Tooltip -->
            <div class="absolute right-0 top-full mt-2 w-48 p-2 bg-zinc-800 text-zinc-300 text-[10px] rounded shadow-xl border border-white/10 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none z-50 leading-tight">
              Create new game with same settings & invite everyone
            </div>
         </button>
         <a href="/" class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-white/10 hover:bg-white/20 text-white transition-colors text-xs font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
            New Game
         </a>
      </div>
    </div>

    <!-- VIEW: JOIN -->
    <div id="view-join" class="hidden space-y-6 max-w-md mx-auto">
      <div class="text-center space-y-2">
        <h2 class="text-2xl font-bold text-white">Join Game</h2>
        <p class="text-zinc-400">Enter your name to join.</p>
      </div>
      <input type="text" id="playerName" placeholder="Your Name" class="input-bubble text-center" maxlength="12" />
      <button id="joinBtn" class="btn-primary w-full">Join</button>
    </div>

    <!-- VIEW: LOBBY -->
    <div id="view-lobby" class="hidden space-y-6">
      <div class="text-center space-y-2">
        <h2 class="text-2xl font-bold text-white">Lobby</h2>
        <p class="text-zinc-400">Waiting for host to start...</p>
      </div>
      
      <div class="max-w-md mx-auto">
        <button id="copyLinkBtn" class="w-full py-3 rounded-xl border border-dashed border-white/20 text-zinc-400 hover:text-white hover:bg-white/5 transition-colors flex items-center justify-center gap-2 text-sm">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
          <span>Copy Invite Link</span>
        </button>
      </div>
      
      <div class="space-y-3">
        <h3 class="text-xs font-medium text-zinc-500 uppercase tracking-wider">Players</h3>
        <div id="lobbyPlayerList" class="flex flex-wrap justify-center gap-3">
          <!-- Player list injected here -->
        </div>
      </div>

      <div id="hostControls" class="hidden pt-4 border-t border-white/10 space-y-3 max-w-md mx-auto">
        <p class="text-xs text-zinc-500 text-center">You are the host</p>
        <button id="startBtn" class="btn-primary w-full bg-emerald-500 hover:bg-emerald-400 text-white border-none shadow-emerald-900/20">
          Start Game
        </button>
      </div>
    </div>

    <!-- VIEW: PLAYING -->
    <div id="view-playing" class="hidden">
      <div class="flex flex-col md:flex-row gap-8 items-start">
        
        <!-- Left Col: Role & Controls -->
        <div class="w-full md:w-1/3 space-y-6 sticky top-4">
          <!-- Role Card -->
          <div class="text-center space-y-4">
            <div class="inline-block px-3 py-1 rounded-full bg-white/5 text-xs text-zinc-400 mb-2">
              Your Role
            </div>
            
            <div id="roleCard" class="bubble relative overflow-hidden h-48 select-none flex flex-col items-center justify-center p-6 shadow-xl">
              <h1 id="roleTitle" class="text-3xl font-bold text-white mb-2 text-center leading-tight">...</h1>
              <p id="roleSub" class="text-zinc-400 text-lg text-center">...</p>
              
              <div id="imposterHint" class="mt-4 pt-4 border-t border-white/10 w-full hidden">
                <span class="text-xs uppercase tracking-widest text-zinc-500 block">Hint</span>
                <p id="hintText" class="text-emerald-400 font-medium mt-1">...</p>
              </div>
            </div>
          </div>

          <div id="hostNote" class="hidden p-4 bg-white/5 rounded-xl border border-white/5 text-xs text-zinc-400 text-center leading-relaxed">
             <strong class="text-zinc-300 block mb-1">Host Controls</strong>
             Only use the <span class="text-red-400">Eliminate</span> button after the group has democratically voted. This reveals their role to everyone.
          </div>
        </div>

        <!-- Right Col: Players -->
        <div class="w-full md:w-2/3 space-y-3">
          <div class="flex items-center justify-between">
             <h3 class="text-xs font-medium text-zinc-500 uppercase tracking-wider">Players</h3>
             <!-- Removed static start badge, now dynamic in list -->
          </div>
          
          <div id="gamePlayerList" class="flex flex-wrap justify-center gap-3">
            <!-- Game players injected here -->
          </div>
        </div>

      </div>
    </div>

    <!-- VIEW: FINISHED / GENERIC MESSAGE -->
    <div id="view-message" class="hidden text-center space-y-4">
      <h2 id="msgTitle" class="text-2xl font-bold text-white"></h2>
      <p id="msgBody" class="text-zinc-400"></p>
      <a href="/" class="btn-primary inline-block">New Game</a>
    </div>

  </div>

  <!-- Custom Confirmation Modal -->
  <dialog id="confirmModal" class="backdrop:bg-black/80 bg-zinc-900 text-white p-6 rounded-2xl border border-white/10 shadow-2xl max-w-sm w-full m-auto open:animate-fade-in backdrop:open:animate-fade-in">
    <h3 class="text-xl font-bold mb-2">Eliminate Player?</h3>
    <p class="text-zinc-400 mb-6">Are you sure you want to eliminate <span id="confirmName" class="text-white font-medium"></span>? This cannot be undone.</p>
    <div class="flex gap-3">
      <button id="cancelBtn" class="flex-1 py-2 rounded-lg bg-zinc-800 hover:bg-zinc-700 transition-colors">Cancel</button>
      <button id="confirmBtn" class="flex-1 py-2 rounded-lg bg-red-600 hover:bg-red-500 transition-colors font-medium">Eliminate</button>
    </div>
  </dialog>

  <!-- Replay Invite Modal -->
  <dialog id="replayModal" class="backdrop:bg-black/80 bg-zinc-900 text-white p-6 rounded-2xl border border-white/10 shadow-2xl max-w-sm w-full m-auto open:animate-fade-in backdrop:open:animate-fade-in">
    <h3 class="text-xl font-bold mb-2">New Game Started!</h3>
    <p class="text-zinc-400 mb-6">The host has started a new game. Do you want to join?</p>
    <div class="flex gap-3">
      <button onclick="document.getElementById('replayModal').close()" class="flex-1 py-2 rounded-lg bg-zinc-800 hover:bg-zinc-700 transition-colors">Stay</button>
      <button id="joinNextBtn" class="flex-1 py-2 rounded-lg bg-emerald-600 hover:bg-emerald-500 transition-colors font-medium">Join Game</button>
    </div>
  </dialog>
</Layout>

<script define:vars={{ code }}>
  // State
  let state = {
    code,
    playerId: null,
    game: null
  };

  // DOM Elements
  const app = document.getElementById('app');
  const connStatus = document.getElementById('connectionStatus');
  const modal = document.getElementById('confirmModal');
  const replayModal = document.getElementById('replayModal');
  const views = {
    join: document.getElementById('view-join'),
    lobby: document.getElementById('view-lobby'),
    playing: document.getElementById('view-playing'),
    message: document.getElementById('view-message')
  };

  // Name Persistence: Load
  const savedName = localStorage.getItem('imposter_player_name');
  if (savedName) {
    document.getElementById('playerName').value = savedName;
  }

  // Auto-Join Logic
  const urlParams = new URLSearchParams(window.location.search);
  const autojoin = urlParams.get('autojoin');
  let autojoinTriggered = false;

  // Init
  setTimeout(() => app.classList.remove('opacity-0'), 100);
  
  // Polling
  let isPolling = false;
  const poll = async () => {
    if (isPolling) return;
    isPolling = true;
    try {
      const res = await fetch(`/api/game/${code}/status`);
      if (res.status === 404) {
        if (state.game) {
             showError('Game Expired', 'This game has been closed due to inactivity.');
        } else {
             showError('Game Not Found', 'This game code does not exist.');
        }
        return; 
      }
      if (!res.ok) throw new Error('Network error');
      
      const data = await res.json();
      state.game = data;
      state.playerId = getCookie('imposter_id');
      connStatus.classList.replace('bg-red-500', 'bg-emerald-500');
      
      // Check for replay
      if (data.nextGameCode && !replayModal.open) {
        const nextLink = document.getElementById('joinNextBtn');
        // Add autojoin param
        nextLink.onclick = () => window.location.href = `/play/${data.nextGameCode}?autojoin=true`;
        replayModal.showModal();
      }

      render();
    } catch (e) {
      console.error(e);
      connStatus.classList.replace('bg-emerald-500', 'bg-red-500');
    } finally {
      isPolling = false;
      // Adaptive Polling: Fast in Lobby (for joins/start), Slow in Game
      const delay = (state.game && state.game.status === 'lobby') ? 800 : 3000;
      setTimeout(poll, delay); 
    }
  };

  poll(); // Initial call

  // Rendering
  function render() {
    const { game, playerId } = state;
    if (!game) return;

    const me = game.players.find(p => p.isMe);
    
    // Header Replay Button
    const headerReplayBtn = document.getElementById('headerReplayBtn');
    if (me?.isHost && game.status !== 'lobby') {
        headerReplayBtn.classList.remove('hidden');
    } else {
        headerReplayBtn.classList.add('hidden');
    }

    if (!me) {
      switchView('join');
      
      // Auto-join Trigger
      if (autojoin && savedName && !autojoinTriggered) {
         autojoinTriggered = true;
         document.getElementById('joinBtn').click();
      }

      const joinBtn = document.getElementById('joinBtn');
      if (joinBtn.disabled && joinBtn.textContent === 'Joining...') {
           if (!autojoinTriggered) { // Only reset if not in auto-join process
               joinBtn.disabled = false;
               joinBtn.textContent = 'Join';
           }
      }
    } else if (game.status === 'lobby') {
      switchView('lobby');
      renderLobby(game, me);
    } else if (game.status === 'playing' || game.status === 'finished') { 
       switchView('playing');
       renderGame(game, me);
    } 
  }

  function switchView(viewName) {
    Object.values(views).forEach(el => el.classList.add('hidden'));
    views[viewName].classList.remove('hidden');
  }

  function renderLobby(game, me) {
    const list = document.getElementById('lobbyPlayerList');
    list.innerHTML = game.players.map(p => `
      <div class="bubble p-3 flex items-center justify-between w-full md:w-[calc(50%-0.75rem)]">
        <span class="${p.isMe ? 'font-bold text-white' : 'text-zinc-300'}">
          ${p.name} ${p.isMe ? '(You)' : ''}
        </span>
        ${p.isHost ? '<span class="text-xs bg-yellow-500/20 text-yellow-500 px-2 py-1 rounded">HOST</span>' : ''}
      </div>
    `).join('');

    const hostControls = document.getElementById('hostControls');
    if (me.isHost) {
      hostControls.classList.remove('hidden');
    } else {
      hostControls.classList.add('hidden');
    }
  }

  function renderGame(game, me) {
    // Role Card
    const roleTitle = document.getElementById('roleTitle');
    const roleSub = document.getElementById('roleSub');
    const imposterHint = document.getElementById('imposterHint');
    const hintText = document.getElementById('hintText');
    
    const myDetails = game.myPlayer;

    if (myDetails) {
      if (myDetails.role === 'imposter') {
        roleTitle.textContent = 'Imposter';
        roleTitle.className = 'text-3xl font-bold text-red-500 mb-2 text-center leading-tight';
        roleSub.textContent = 'Blend in. Don\'t get caught.';
        
        if (myDetails.hint) {
          imposterHint.classList.remove('hidden');
          hintText.textContent = myDetails.hint;
        } else {
          imposterHint.classList.add('hidden');
        }
      } else {
        roleTitle.textContent = myDetails.word;
        roleTitle.className = 'text-3xl font-bold text-white mb-2 text-center leading-tight';
        roleSub.textContent = `Category: ${game.config.category ? game.config.category.replace(/_/g, ' ') : 'Unknown'}`;
        imposterHint.classList.add('hidden');
      }
    }

    // Host Controls
    if (me.isHost) {
       document.getElementById('hostNote').classList.remove('hidden');
    }

    // Player List
    const list = document.getElementById('gamePlayerList');
    let starterName = '';
    list.innerHTML = game.players.map(p => {
      const isStarter = game.starterId && p.id === game.starterId;
      if (isStarter) starterName = p.name;
      return `
      <div class="bubble p-3 flex items-center justify-between ${p.votedOut ? 'opacity-50' : ''} relative w-full md:w-[calc(50%-0.75rem)]">
        <div class="flex flex-col">
          <div class="flex items-center gap-2">
            <span class="${p.isMe ? 'font-bold text-white' : 'text-zinc-300'} ${p.votedOut ? 'line-through' : ''}">
              ${p.name} ${p.isMe ? '(You)' : ''}
            </span>
            ${isStarter ? '<span class="text-[10px] text-emerald-500 font-bold bg-emerald-500/10 px-1.5 py-0.5 rounded uppercase tracking-wider">Starts</span>' : ''}
          </div>
          ${p.votedOut || game.status === 'finished'
            ? `<div class="flex items-center gap-2 mt-1">
                 ${p.votedOut ? '<span class="text-[10px] text-red-400 font-bold uppercase tracking-wider">Eliminated</span>' : ''}
                 ${p.role ? `
                   <span class="text-[10px] px-2 py-0.5 rounded font-bold uppercase tracking-wide ${p.role === 'imposter' ? 'bg-red-500 text-white' : 'bg-emerald-500 text-white'}">
                     ${p.role}
                   </span>
                 ` : ''}
               </div>`
            : ''
          }
        </div>
        
        ${me.isHost && !p.votedOut ? `
          <button onclick="confirmEliminate('${p.id || ''}', '${p.name}')" class="text-xs bg-red-500/10 hover:bg-red-500/20 text-red-500 px-3 py-1.5 rounded transition-colors border border-red-500/20">
            Eliminate
          </button>
        ` : ''}
      </div>
    `}).join('');
    
    if (starterName) {
      document.getElementById('startPlayerBadge').textContent = `${starterName} starts!`;
    } else {
      document.getElementById('startPlayerBadge').textContent = '';
    }
  }

  function showError(title, body) {
    document.getElementById('msgTitle').textContent = title;
    document.getElementById('msgBody').textContent = body;
    switchView('message');
  }

  function getCookie(name) {
    const value = `; ${document.cookie}`;
    const parts = value.split(`; ${name}=`);
    if (parts.length === 2) return parts.pop().split(';').shift();
  }

  // Actions
  document.getElementById('joinBtn').addEventListener('click', async () => {
    const nameInput = document.getElementById('playerName');
    const name = nameInput.value;
    if (!name) return;
    
    // Name Persistence: Save
    localStorage.setItem('imposter_player_name', name);

    const btn = document.getElementById('joinBtn');
    btn.textContent = 'Joining...';
    btn.disabled = true;

    try {
      await fetch(`/api/game/${code}/join`, {
        method: 'POST',
        body: JSON.stringify({ name }),
        headers: { 'Content-Type': 'application/json' }
      });
      if (!isPolling) poll(); 
    } catch (e) {
      console.error(e);
      btn.textContent = 'Join';
      btn.disabled = false;
      alert('Failed to join. Please try again.');
    }
  });

  document.getElementById('startBtn').addEventListener('click', async () => {
    const btn = document.getElementById('startBtn');
    const originalText = btn.textContent;
    btn.textContent = 'Starting...';
    btn.disabled = true;
    
    try {
      const res = await fetch(`/api/game/${code}/start`, { method: 'POST' });
      if (!res.ok) {
          const data = await res.json();
          alert(data.error || 'Failed to start game');
          btn.textContent = originalText;
          btn.disabled = false;
      } else {
          // Optimization: Update state immediately with returned game data
          const data = await res.json();
          state.game = data;
          render();
          // No need to poll immediately, next interval will catch up
      }
    } catch (e) {
      console.error(e);
      alert('Network error');
      btn.textContent = originalText;
      btn.disabled = false;
    }
  });

  document.getElementById('headerReplayBtn').addEventListener('click', async () => {
    const btn = document.getElementById('headerReplayBtn');
    const originalText = btn.innerHTML;
    btn.innerHTML = '<span>...</span>';
    btn.disabled = true;
    
    try {
      const res = await fetch(`/api/game/${code}/replay`, { method: 'POST' });
      if (res.ok) {
        const data = await res.json();
        window.location.href = `/play/${data.newCode}?autojoin=true`; // Host autojoins too? Sure
      } else {
        alert('Failed to replay.');
        btn.innerHTML = originalText;
        btn.disabled = false;
      }
    } catch (e) {
       console.error(e);
       alert('Error creating replay.');
       btn.innerHTML = originalText;
       btn.disabled = false;
    }
  });


  document.getElementById('copyLinkBtn').addEventListener('click', () => {
    navigator.clipboard.writeText(window.location.href);
    const btn = document.getElementById('copyLinkBtn');
    const originalText = btn.innerHTML;
    btn.innerHTML = '<span class="text-emerald-400">Copied!</span>';
    setTimeout(() => {
      btn.innerHTML = originalText;
    }, 2000);
  });

  // Modal Logic
  let targetToEliminate = null;
  const confirmName = document.getElementById('confirmName');
  const cancelBtn = document.getElementById('cancelBtn');
  const confirmBtn = document.getElementById('confirmBtn');

  window.confirmEliminate = (id, name) => {
    targetToEliminate = { id, name };
    confirmName.textContent = name;
    modal.showModal();
  };

  cancelBtn.addEventListener('click', () => {
    modal.close();
    targetToEliminate = null;
  });

  confirmBtn.addEventListener('click', async () => {
    if (!targetToEliminate) return;
    
    const originalText = confirmBtn.textContent;
    confirmBtn.textContent = 'Eliminating...';
    confirmBtn.disabled = true;
    
    try {
      await fetch(`/api/game/${code}/vote`, {
        method: 'POST', 
        body: JSON.stringify({ targetId: targetToEliminate.id, targetName: targetToEliminate.name }),
        headers: { 'Content-Type': 'application/json' }
      });
      poll();
    } catch (e) {
      console.error(e);
      alert('Failed to eliminate player.');
    } finally {
      modal.close();
      targetToEliminate = null;
      confirmBtn.textContent = originalText;
      confirmBtn.disabled = false;
    }
  });

</script>